 
    <% layout("/Layouts/boilerplate")  %>
<body>
    <h1>Edit your List</h1>
     
    <form action="/listing/<%= data._id%>?_method=PUT" method="post">
        <input type="text" name="title" value="<%= data.title %>">
        <br><br>
        <input type="text" name="image" value="<%= data.image %>">
         <br><br>
        <textarea name="description" rows="10 " col = "10"><%= data.description %></textarea>
         <br><br>
        <input type="number" name="price" value="<%= data.price %>">
         <br><br>
        <input type="text" name="location" value="<%= data.location %>">
         <br><br>
        <input type="text" name="country" value="<%= data.country  %>">
         <br><br>

        <button type="submit">Edit</button>


    </form>
    
</body>
 